<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LoginButtonTheme" 
           BasedOn="{StaticResource {x:Type Button}}"
           TargetType="{x:Type Button}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="main_border"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                Background="#05b0ff"
                                CornerRadius="10">
                            <TextBlock x:Name="button_text"
                                       Text="{TemplateBinding Property=Name}"                                       
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontSize="30"
                                       Foreground="#bbdff0"
                                       FontWeight="Bold"
                                       FontFamily="/Fonts/#Baloo Bhaijaan 2"
                                       Margin="0,5,0,0"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="main_border" Value="#bbdff0"/>
                                <Setter Property="Foreground" TargetName="button_text" Value="#05b0ff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Height" Value="80"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style.Setters>
    </Style>
</ResourceDictionary>