<UserControl x:Class="CarCRUD.Views.CarsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarCRUD.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="860">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">

            <TextBlock Text="MY CARS"
                       Style="{StaticResource TitleTheme}"
                       FontSize="30"/>
        </Border>

        <Button Grid.Row="1"
                x:Name="NewCar"
                Content="NEW"
                FontSize="20"
                HorizontalAlignment="Right"
                Height="30"
                Width="100"
                Margin="0,0,20,0"
                Style="{StaticResource LoginButtonTheme}"/>

        <ScrollViewer Grid.Row="2">
            <Grid>
                <ListView VerticalAlignment="Stretch"
                          HorizontalAlignment="Center"
                          x:Name="Cars">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="carType_brand_name"/>
                                <TextBlock x:Name="carType_name"/>
                                <TextBlock x:Name="ID"/>
                            </StackPanel>                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
